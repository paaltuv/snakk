{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "SqliteConnection": "Data Source=snakk.db"
  },
  "AllowedHosts": "*",

  // true|false
  "EnableDefaultChannels": "true",
  "EnableCustomChannels": "true",
  "EnableChannelAvatars": "true",
  "EnableChannelBans": "true",
  "EnableChannelReports": "true",
  "EnableChannelSubscriptions": "true",
  "EnableChannelRules": "true",
  "EnableChannelModerators": "true",
  "EnableThreadBans": "true",
  "EnableThreadReports": "true",
  "EnableThreadSubscriptions": "true",
  "EnableUserAvatars": "true",
  "EnableUserBans": "true",
  "EnableUserReports": "true",
  "EnableUserSocialLinks": "true",
  "EnableUserSubscriptions": "true",
  "EnableCustomTags": "true",
  "EnableSurveys": "true",
  "EnableRules": "true",
  "EnableVotes": "true",
  "EnableDownVotes": "true",
  "EnableAccessGroups": "true",
  "EnableUpVotingRightRestrictions": "true",
  "EnableDownVotingRightRestrictions": "true",
  "EnableAdministratorExcemptionFromVotingRightRestrictions": "true",
  "EnableModeratorExcemptionFromVotingRightRestrictions": "true",

  // votecount|postcount|registrationdate
  "UpVotingRightRestrictedBasedOn": "votecount",
  "DownVotingRightRestrictedBasedOn": "votecount",

  // <int>|<timespan> (e.g. 1d for 1 day, 2m for 2 months, 3y for 3 years)
  "UpVotingRightRestrictedUntilTreshold": "5",
  "DownVotingRightRestrictedUntilTreshold": "500",

  // hotness|votecount|postcount|weight
  "SortPinnedTagsBy": "weight",
  "SortPinnedChannelsBy": "weight",

  // hotness|votecount|postcount|createddate
  "DefaultChannelThreadSortBy": "createddate",
